<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('partial/head-bootstrap') %>
    <title>Document</title>
</head>
<body>
    <%- include('partial/navbar') %>
    <div class="container mx-auto flex flex-col  my-20 py-16">
        <h1 class="text-7xl text-center mb-[.4em]">Register Page</h1>

        <div class="text-center my-10 bg-[#fce7f3] text-red-600 w-[35em] mx-auto">
        <% if( error ) { %>
                <% error.split(',').forEach(elem => { %>
                    <p><%= elem %></p>
             <%   }); %>
             <% } %>
             <% if(usernameError){ %>
                <p><%= usernameError %></p>
                <% } %>
            </div>
    
    
        <form action="/register" method="post"  class="mx-auto border border-black py-16 px-10">
            <div class="flex justify-between my-5">
                <label class="text-2xl">Username</label>
                <input type="text" name="username" class="border border-black text-2xl  p-1" autocomplete="false">
            </div>
            <div>
                <label class="text-2xl">password</label>
                <input type="password" name="password" class="border border-black text-2xl  p-1" autocomplete="false">
            </div>
            <div class="flex justify-between my-5">
                <label class="text-2xl">Email</label>
                <input type="text" name="email" class="border border-black text-2xl  p-1" autocomplete="false">
            </div>
            <div class="flex justify-between my-5">
                <label for="" class="text-2xl">Create As ?</label>
                <select name="role" class="border border-black text-2xl p-1 pl-10">
                    <option value="investor">investor</option>
                    <option value="company">Company</option>
                </select>
            </div>
            <div class="flex justify-center">
                <button type="submit" class="bg-[#64748b] p-2 rounded text-white ">REGISTER</button>

            </div>
        </form>
    </div>
    
</body>
</html>